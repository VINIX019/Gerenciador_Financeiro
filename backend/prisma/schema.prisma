generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Usuarios {
  id            Int            @id @default(autoincrement()) // ID num√©rico
  nome          String
  email         String         @unique
  senha         String
  // Um usu√°rio pode ter muitas transa√ß√µes e investimentos
  transacoes    Transacoes[]
  investimentos Investimento[]
}

model Transacoes {
  id        Int      @id @default(autoincrement())
  descricao String
  valor     Float
  tipo      String // "entrada" ou "saida"

  data      DateTime @db.Date   // üëà APENAS DATA, SEM HORA

  createdAt DateTime @default(now())

  userId  Int
  usuario Usuarios @relation(fields: [userId], references: [id])
}

model Investimento {
  id         Int      @id @default(autoincrement())
  nome       String
  valor      Float
  quantidade Float
  tipo       String
  createdAt  DateTime @default(now())

  // Relacionamento com Usu√°rio
  userId  Int
  usuario Usuarios @relation(fields: [userId], references: [id])
}
