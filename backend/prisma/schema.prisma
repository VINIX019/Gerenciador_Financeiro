generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // OBRIGATÓRIO para o Supabase
}

model Usuarios {
  id            Int            @id @default(autoincrement()) // ID numérico
  nome          String
  email         String         @unique
  senha         String
  // Um usuário pode ter muitas transações e investimentos
  transacoes    Transacoes[]
  investimentos Investimento[]
}

model Transacoes {
  id        Int      @id @default(autoincrement())
  descricao String
  valor     Float
  tipo      String // "receita" ou "despesa"
  data      DateTime @default(now())
  createdAt DateTime @default(now())

  // Relacionamento com Usuário
  userId  Int
  usuario Usuarios @relation(fields: [userId], references: [id])
}

model Investimento {
  id         Int      @id @default(autoincrement())
  nome       String
  valor      Float
  quantidade Float
  tipo       String
  createdAt  DateTime @default(now())

  // Relacionamento com Usuário
  userId  Int
  usuario Usuarios @relation(fields: [userId], references: [id])
}
